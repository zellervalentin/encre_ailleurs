<p id="notice"><%= notice %></p>

<h1>Lettres</h1>

<table>
  <thead>
    <tr>
      <th>Objet</th>
      <th>Message</th>
      <th>De</th>
      <th>A</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
      <tr>
        <td><%= letter.title %></td>
        <td><%= letter.message %></td>
        <td><%= letter.from %></td>
        <td><%= letter.to %></td>
        <td><%= link_to 'Show', letter %></td>
        <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
        <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle lettre', new_letter_path %>
