<p id="notice"><%= notice %></p>

<h1>Messages reçus</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Message</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receiveds.each do |letter| %>
      <tr>
        <td><%= image_tag letter.from.gravatar_url %></td>
        <td><%= letter.title %></td>
        <td><%= letter.message %></td>
        <td><%= letter.from %></td>
        <td><%= letter.to %></td>
        <td><%= link_to 'Show', letter %></td>
        <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
        <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

